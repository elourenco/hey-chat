{
  "$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
  "root": true,
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [["@app/**", "@assets/**", "@components/**", "@features/**"]]
          }
        }
      }
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "src/**/*.{js,jsx,ts,tsx,json}",
      "__tests__/**/*.{js,jsx,ts,tsx}",
      "app.{js,jsx,ts,tsx}",
      "index.{js,jsx,ts,tsx}",
      "*.config.{js,ts}",
      "!android",
      "!ios",
      "!build",
      "!coverage",
      "!.expo",
      "!node_modules"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "attributePosition": "auto",
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100,
    "useEditorconfig": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "error",
        "noArrayIndexKey": "warn",
        "noConsole": "warn"
      },
      "complexity": {
        "useLiteralKeys": "off",
        "noUselessCatch": "off",
        "noForEach": "off",
        "noUselessFragments": "warn"
      },
      "style": {
        "useSelfClosingElements": "warn",
        "noNonNullAssertion": "warn"
      },
      "correctness": {
        "useHookAtTopLevel": "error",
        "useExhaustiveDependencies": "error",
        "noUnusedVariables": "error",
        "noUnusedImports": "error",
        "useJsxKeyInIterable": "error"
      },
      "nursery": {
        "noFloatingPromises": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "trailingCommas": "all"
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space",
      "trailingCommas": "none",
      "lineEnding": "lf"
    }
  }
}
