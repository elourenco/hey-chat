generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  from      String
  to        String
  body      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("messages")
  @@index([from])
  @@index([to])
}
